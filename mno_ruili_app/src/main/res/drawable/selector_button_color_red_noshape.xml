     <!--被选中时的颜色-->
   <item android:state_selected="true" >
       <shape android:shape="rectangle">
            <solid android:color="#7fdfdfdf"  />
        </shape>
   </item>
   <!--获得焦点时的颜色-->
   <item android:state_focused="true" >
	    <shape android:shape="rectangle">
	        <solid android:color="#7fdfdfdf"  />
	    </shape>
   </item>
   <!--点击时的颜色-->
   <item android:state_pressed="true" >
     <shape android:shape="rectangle">
         <solid android:color="#7fdfdfdf"  />
     </shape>
   </item>
   <!-- 默认颜色 -->
   <item >
       <shape android:shape="rectangle">
            <solid android:color="#ffffff"  />
        </shape>
   </item>
</selector>