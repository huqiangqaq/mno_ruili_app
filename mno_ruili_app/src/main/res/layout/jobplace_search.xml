<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_top" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/view_line_edi" >
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0"
                    android:src="@drawable/nei_find" />
                <mno.ruili_app.ct.CustomEditText
                    android:id="@+id/nei_find_edi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="#666666"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/edi_clear"
                    android:hint="请输入关键字进行搜索"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#afffffff"
                    android:textSize="15sp" >
                </mno.ruili_app.ct.CustomEditText>
            </LinearLayout>
            <TextView
                android:id="@+id/back"
                style="@style/style_text_mybut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="取消"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
	    <!-- 搜索前的视图 -->
		<LinearLayout 
		    android:id="@+id/ll_searchBefore"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    
		    android:orientation="vertical">
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffffff"
		        android:layout_marginLeft="5dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginRight="5dp"
		        android:orientation="horizontal">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="30dp"
		            android:layout_marginLeft="5dp"
		            android:gravity="center_vertical"
		            android:textSize="13sp"
		            android:text="搜索历史"/>
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="15dp"
		            android:gravity="center_vertical"
		            android:layout_marginTop="6dp"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="40dp"
		            android:background="@drawable/delete_history"/>
		        <TextView 
		            android:id="@+id/tv_deleteAll"
		            android:layout_width="wrap_content"
		            android:layout_height="30dp"
		            android:layout_alignParentRight="true"		            
		            android:layout_marginRight="5dp"
		            android:textSize="13sp"
		            android:gravity="center_vertical"
		            android:paddingLeft="5dp"
		            android:text="清空"/>
		    </RelativeLayout>
			<TextView
		          android:layout_width="match_parent"
		          android:layout_height="0.01dip"
		          android:background="#7fdcdcdc" />
			<ListView 
			    android:id="@+id/lv_history"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#ffffff"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp">
			</ListView>
		</LinearLayout>
		<!-- 搜索后的视图 -->
		<LinearLayout 
		    android:id="@+id/ll_searchLater"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:visibility="gone"
		    android:orientation="vertical">
			<LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:orientation="horizontal">
		        <!--  <TextView
		            android:id="@+id/tv_salary"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"           
		            android:text="薪资"
		            android:textSize="12sp"
		            android:layout_gravity="center_vertical"
		            android:gravity="center"
		            android:drawableRight="@drawable/up"
		            android:layout_weight="1"/>
		        <TextView
		            android:id="@+id/tv_exp"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:text="经验"
		            android:textSize="12sp"
		            android:layout_gravity="center_vertical"
		            android:gravity="center"
		            android:drawableRight="@drawable/up"
		            android:layout_weight="1"/>
		        <TextView
		            android:id="@+id/tv_time"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:text="发布时间"
		            android:textSize="12sp"
		            android:layout_gravity="center_vertical"
		            android:gravity="center"
		            android:drawableRight="@drawable/up"
		            android:layout_weight="1"/>
		        <TextView
		            android:id="@+id/tv_place"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:text="工作地点"
		            android:textSize="12sp"
		            android:layout_gravity="center_vertical"
		            android:gravity="center"
		            android:drawableRight="@drawable/up"
		            android:layout_weight="1"/>-->
	            <mno.ruili_app.customView.ExpandTabView
			        android:id="@+id/expandtab_view"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"/>
		    </LinearLayout>
		    <mno.mylistview.PullToRefreshList
		         android:id="@+id/mListView"
		         android:layout_width="match_parent"
		         android:layout_height="match_parent"
		         android:divider="@null"
		         android:listSelector="@drawable/selector_button_color_red_noshape" >
		     </mno.mylistview.PullToRefreshList>
		</LinearLayout>	
	</FrameLayout>
</LinearLayout>
