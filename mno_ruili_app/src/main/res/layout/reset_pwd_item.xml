<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
		 <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="48dp" 
		    android:background="@color/blue_top" >
             <TextView              
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="修改密码"
                android:textColor="@color/white"
                android:textSize="@dimen/default_font_title_size"/>
             <ImageView
                 android:id="@+id/iv_back2"
                 style="@style/style_text_canbut"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginRight="10dp"
                 android:paddingLeft="5dp"
                 android:paddingRight="5dp"
                 android:src="@drawable/all_back" />

       	 </RelativeLayout>
       	 <!--  -->
       	 <TextView
		     android:layout_width="match_parent"
		     android:layout_height="0.01dip"
		     android:layout_marginLeft="20dp"
		     android:layout_weight="0"
		     android:layout_marginTop="20dp"
		     android:background="#7fdcdcdc" />
       	 <!--  -->
       <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"		    
		    android:background="#FFFFFF"
		    android:orientation="vertical" >
	<!-- 原密码 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/etPwd_before"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="0.2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="原密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#b7b7b7"
            android:textSize="14sp" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/imageView1"
            style="@style/style_text_mybut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:src="@drawable/edi_clear"
            android:visibility="invisible" />

    </LinearLayout>

 <TextView
     android:layout_width="match_parent"
     android:layout_height="0.01dip"
     android:layout_marginLeft="20dp"
     android:layout_weight="0"
     android:background="#7fdcdcdc" />
<!-- 新密码 -->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content" >

     <EditText
         android:id="@+id/etPwd_now"
         android:layout_width="match_parent"
         android:layout_height="48dp"
         android:layout_marginBottom="0.2dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_weight="1"
         android:background="#FFFFFF"
         android:ems="10"
         android:hint="新密码"
         android:inputType="textPassword"
         android:padding="10dp"
         android:singleLine="true"
         android:textColorHint="#b7b7b7"
         android:textSize="14sp" />
      <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:src="@drawable/edi_clear"
            style="@style/style_text_mybut"
            android:visibility="invisible" />

 </LinearLayout>
 <TextView
     android:layout_width="match_parent"
     android:layout_height="0.01dip"
     android:layout_marginLeft="20dp"
     android:layout_weight="0"
     android:background="#7fdcdcdc" />
<!-- 确认新密码 -->
<LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content" >

     <EditText
         android:id="@+id/etPwd_now2"
         android:layout_width="match_parent"
         android:layout_height="48dp"
         android:layout_marginBottom="0.2dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_weight="1"
         android:background="#FFFFFF"
         android:ems="10"
         android:hint="确认新密码"
         android:inputType="textPassword"
         android:padding="10dp"
         android:singleLine="true"
         android:textColorHint="#b7b7b7"
         android:textSize="14sp" />
      <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:src="@drawable/edi_clear"
            style="@style/style_text_mybut"
            android:visibility="invisible" />

 </LinearLayout>
</LinearLayout>
<TextView
     android:layout_width="match_parent"
     android:layout_height="0.01dip"
     android:layout_marginLeft="20dp"
     android:layout_weight="0"
     android:background="#7fdcdcdc" />
        <!-- 确认修改 -->
        <TextView
			    android:id="@+id/tv_ok"
			    style="@style/style_text_mybut"
			    android:layout_width="match_parent"
			    android:layout_height="48dp"
			    android:layout_marginTop="20dp"
			    android:background="@drawable/radius_green"
			    android:text="确认修改"
			    android:textColor="@color/white"
			    android:textSize="18sp" />
</LinearLayout>

