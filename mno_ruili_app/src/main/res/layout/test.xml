<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_divider"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/itemsImage"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        >
<ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
 <ImageView
            android:id="@+id/itemsIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/itemstext"
            android:layout_centerHorizontal="true"
             android:scaleType="fitXY"
           />
          
        <TextView
            android:id="@+id/itemstext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="挖掘直通车点击的秘密"
            android:textColor="@color/white_f9"
            android:textSize="@dimen/default_font_content_size" />

          <TextView
              android:id="@+id/itemstext2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_above="@+id/itemstext"
              android:layout_alignParentLeft="true"
              android:background="#5f000000"
              android:paddingLeft="20dp"
              android:text="直通车不能说的秘密"
              android:textSize="@dimen/default_font_flag_size" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

</LinearLayout>
