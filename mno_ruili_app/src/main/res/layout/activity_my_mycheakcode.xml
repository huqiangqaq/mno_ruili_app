<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_top" >

        <ImageView
            android:id="@+id/back"
            style="@style/style_text_mybut"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/all_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="@dimen/default_font_title_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cheak_ts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="验证码已发送到手机"
        android:textColor="#7a7a7a"
        android:textSize="@dimen/default_font_flag_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edi_my_yzm"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="0.2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:textColorHint="#b7b7b7"
            android:ems="10"
            android:hint="请输入验证码"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <mno.ruili_app.ct.TimeButton
            android:id="@+id/check_but_sms"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="0.2dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0"
            android:background="@drawable/radius_hui"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="@dimen/default_font_flag_size" />

    </LinearLayout>
    <TextView
    android:id="@+id/my_but_ok"
    style="@style/style_text_mybut"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/radius_green"
    android:text="完成"
    android:textColor="@color/white"
    android:textSize="14sp" />

</LinearLayout>
