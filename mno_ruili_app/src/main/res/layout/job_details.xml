			        android:layout_marginBottom="7dp"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#a7a7a7"
			            android:text="网址"/>
			        <TextView 
			            android:id="@+id/tv_domain"
			            android:layout_width="wrap_content"
