<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 	<!-- 教育经历-->
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"     
       android:background="#ffffff"
       android:layout_marginTop="7dp"       
       android:orientation="vertical">
       <TextView 
           android:layout_marginTop="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#a7a7a7"
           android:layout_marginLeft="4dp"
           android:text="教育经历"/>
      	<RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="4dp"
           android:layout_marginTop="5dp">
           <TextView 
	            android:id="@+id/tv_school"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="浙江大学"/>		           
	        <TextView 
	            android:id="@+id/tv_eduLevel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dp"
	            android:layout_marginLeft="4dp"
	            android:text="硕士"/>
        </RelativeLayout>
		<RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="4dp"
           android:layout_marginTop="5dp">
           <TextView 
	            android:id="@+id/tv_joinSchool"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="2014-05"/>
	           <TextView 
	            android:id="@+id/zhi"
	            android:layout_width="wrap_content"
	            android:layout_toRightOf="@+id/tv_joinSchool"
	            android:layout_height="wrap_content"
	            android:text="~"/>
	           <TextView 
	            android:id="@+id/tv_leaveSchool"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/zhi"
	            android:text="2015-05"/>
	        <TextView 
	            android:id="@+id/tv_major"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dp"
	            android:text="信息管理"/>
       </RelativeLayout>
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="4dp"
           android:orientation="vertical">
           <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#a7a7a7"
	            android:text="经历描述"/>
	        <TextView 
	            android:id="@+id/tv_schoolDescribe"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="10dp"
	            android:text="1.XXXXXXXXXX"/>
       </LinearLayout>
   </LinearLayout>

</LinearLayout>
