<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F4F5F9"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"   
        android:background="#ffffff" >
        <!-- 职位名称 -->
        <LinearLayout  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="4dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/orange"/>
            <TextView 
                android:id="@+id/tv_jobName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:text="IOS开发工程师"/>
        </LinearLayout>
        <!-- 学历，地点，薪水等要求 -->
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/tv_style1">
                <ImageView 
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"                                    
                    android:layout_gravity="center_vertical"   
                    android:src="@drawable/salary"/>
                <TextView 
                    android:id="@+id/tv_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textColor="#ffffff"
                    android:text="10k~20k"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:background="@drawable/tv_style2">
                <ImageView 
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"   
                    android:src="@drawable/worktime"/>
                <TextView 
                    android:id="@+id/tv_workTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textColor="#ffffff"
                    android:text="3~5年"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:background="@drawable/tv_style3">
                <ImageView 
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"   
                    android:src="@drawable/education"/>
                <TextView 
                    android:id="@+id/tv_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textColor="#ffffff"
                    android:text="本科以上"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:background="@drawable/tv_style4">
                <ImageView 
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"   
                    android:src="@drawable/workplace"/>
                <TextView 
                    android:id="@+id/tv_workPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textColor="#ffffff"
                    android:text="杭州"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:background="#7fdcdcdc" />
        <!-- 亮点 -->
        <mno.ruili_app.ct.TagFlowLayout
            android:id="@+id/fl_jobMsg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
       	</mno.ruili_app.ct.TagFlowLayout>       
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.01dip"
            android:background="#7fdcdcdc" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/my_login_imagebox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"    
                android:layout_gravity="center_vertical"                
                android:background="@drawable/imagebox"
                android:orientation="vertical" >
	            <mno.ruili_app.ct.RoundImageView
	                android:id="@+id/iv_jobImage"
	                android:layout_width="35dp"
	                android:layout_height="35dp" />
	        </RelativeLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"   
                android:orientation="vertical">
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_nickName" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="刘备"/>
                    <TextView 
                        android:id="@+id/tv_workLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="CEO"/>
                </LinearLayout>
                <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView 
                        android:id="@+id/tv_companyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:text="杭州万卓电子商务有限公司"/>
                    <TextView 
                        android:id="@+id/tv_updateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                       
                        android:layout_marginRight="5dp"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_alignParentRight="true"
                        android:text="今天发布"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
