<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/zb_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
           
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white_f5"
            android:visibility="visible" >

            <TextView
                android:id="@+id/zb_color"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:background="@color/blue" />

            <TextView
                android:id="@+id/zb_bt_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="热门评论"
                android:textColor="#979797"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/zb_bt_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="2015年5月17日"
                android:textColor="#979797"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="12dp"
            android:background="#dcdcdc" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:orientation="horizontal" >

           <!--  <mno.ruili_app.ct.RoundImageView
                android:id="@+id/pl_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF" /> -->

                 <mno.ruili_app.ct.RoundImageView
                     android:id="@+id/pl_image"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:layout_marginLeft="15dp"
                     android:layout_marginTop="15dp"
                     android:background="#00FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/pl_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="张杰"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/pl_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:drawablePadding="2dp"
                        android:text="2015.05.19 10:10"
                        android:textColor="#555555"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pl_floor "
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="2dp"
                        android:text=""
                        android:textColor="#7a7a7a"
                        android:textSize="13sp" />

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/pl_zan"
                            style="@style/style_text_mybut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="24dp"
                            android:drawableLeft="@drawable/view_nozan"
                            android:drawablePadding="5dp"
                            android:gravity="bottom"
                            android:text="100"
                            android:textColor="#939393"
                            android:textSize="13sp" />

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/pl_con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:text="沙发"
                    android:textColor="#424242"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="75dp"
        android:background="#dcdcdc"
        android:text="" />

</LinearLayout>
