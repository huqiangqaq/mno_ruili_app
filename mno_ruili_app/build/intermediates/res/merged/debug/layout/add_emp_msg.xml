<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_top" >
        <mno.ruili_app.ct.CloseButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/all_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="填写招聘信息"
            android:textColor="@color/white"
            android:textSize="@dimen/default_font_title_size" />
    </RelativeLayout>
	 <ScrollView 
	    android:id="@+id/sv_msg"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_marginTop="7dp">
			    <LinearLayout 
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:background="@drawable/selector_button_color_red_noshape"
			         android:orientation="horizontal">
			     	<TextView                          
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:layout_gravity="center"
			             android:layout_marginLeft="20dp"
			             android:text="公司名称"
			             android:textColor="#a7a7a7"
			             android:textSize="@dimen/default_font_content_size" />
				    <mno.ruili_app.ct.CustomEditText
			            android:id="@+id/cet_companyName"
			            android:layout_width="match_parent"
			            android:layout_height="48dp"
			            android:layout_marginBottom="0.2dp"
			            android:layout_weight="1"
			            android:background="#FFFFFF"
			            android:ems="10"
			            android:hint="请输入公司名称(必填)"
			            android:inputType="none"
			            android:gravity="right"
			            android:padding="10dp"
			            android:singleLine="true"
			            android:textColorHint="#b7b7b7"
			            android:textSize="14sp" >		
			            <requestFocus />
			        </mno.ruili_app.ct.CustomEditText>
			    </LinearLayout>
		        <TextView
				    android:layout_width="match_parent"
				    android:layout_height="0.01dip"
				    android:layout_marginLeft="20dp"
				    android:layout_weight="0"
				    android:background="#7fdcdcdc" />
		        <LinearLayout 
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:background="@drawable/selector_button_color_red_noshape"
			         android:orientation="horizontal">
			     	<TextView                          
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:layout_gravity="center"
			             android:layout_marginLeft="20dp"
			             android:text="公司地址"
			             android:textColor="#a7a7a7"
			             android:textSize="@dimen/default_font_content_size" />
			        <mno.ruili_app.ct.CustomEditText
			            android:id="@+id/cet_address"
			            android:layout_width="match_parent"
			            android:layout_height="48dp"
			            android:layout_marginBottom="0.2dp"
			            android:layout_weight="1"
			            android:background="#FFFFFF"
			            android:ems="10"
			            android:hint="请输入公司地址(必填)"
			            android:inputType="none"
			            android:gravity="right"
			            android:padding="10dp"
			            android:singleLine="true"
			            android:textColorHint="#b7b7b7"
			            android:textSize="14sp" >		
			        </mno.ruili_app.ct.CustomEditText>
			    </LinearLayout>    
		        <TextView
				    android:layout_width="match_parent"
				    android:layout_height="0.01dip"
				    android:layout_marginLeft="20dp"
				    android:layout_weight="0"
				    android:background="#7fdcdcdc" />
		        <LinearLayout 
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:background="@drawable/selector_button_color_red_noshape"
			         android:orientation="horizontal">
			     	<TextView                          
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:layout_gravity="center"
			             android:layout_marginLeft="20dp"
			             android:text="公司网址"
			             android:textColor="#a7a7a7"
			             android:textSize="@dimen/default_font_content_size" />
			        <mno.ruili_app.ct.CustomEditText
			            android:id="@+id/cet_domain"
			            android:layout_width="match_parent"
			            android:layout_height="48dp"
			            android:layout_marginBottom="0.2dp"
			            android:layout_weight="1"
			            android:background="#FFFFFF"
			            android:ems="10"
			            android:hint="请输入公司网址"
			            android:inputType="none"
			            android:gravity="right"
			            android:padding="10dp"
			            android:singleLine="true"
			            android:textColorHint="#b7b7b7"
			            android:textSize="14sp" >		
			        </mno.ruili_app.ct.CustomEditText>
			     </LinearLayout>   
		        <TextView
				    android:layout_width="match_parent"
				    android:layout_height="0.01dip"
				    android:layout_marginLeft="20dp"
				    android:layout_weight="0"
				    android:background="#7fdcdcdc" />
		        <LinearLayout 
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:background="@drawable/selector_button_color_red_noshape"
			         android:orientation="horizontal">
			     	<TextView                          
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:layout_gravity="center"
			             android:layout_marginLeft="20dp"
			             android:text="联系电话"
			             android:textColor="#a7a7a7"
			             android:textSize="@dimen/default_font_content_size" />
			        <mno.ruili_app.ct.CustomEditText
			            android:id="@+id/cet_phone"
			            android:layout_width="match_parent"
			            android:layout_height="48dp"
			            android:layout_marginBottom="0.2dp"
			            android:layout_weight="1"
			            android:background="#FFFFFF"
			            android:ems="10"
			            android:hint="请输入联系电话(必填)"
			            android:inputType="none"
			            android:gravity="right"
			            android:padding="10dp"
			            android:singleLine="true"
			            android:textColorHint="#b7b7b7"
			            android:textSize="14sp" >		
			        </mno.ruili_app.ct.CustomEditText>
			    </LinearLayout>   
		        <TextView
				    android:layout_width="match_parent"
				    android:layout_height="0.01dip"
				    android:layout_marginLeft="20dp"
				    android:layout_weight="0"
				    android:background="#7fdcdcdc" />
		        <LinearLayout 
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:background="@drawable/selector_button_color_red_noshape"
			         android:orientation="horizontal">
			     	<TextView                          
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:layout_gravity="center"
			             android:layout_marginLeft="20dp"
			             android:text="收件邮箱"
			             android:textColor="#a7a7a7"
			             android:textSize="@dimen/default_font_content_size" />
			        <mno.ruili_app.ct.CustomEditText
			            android:id="@+id/cet_email"
			            android:layout_width="match_parent"
			            android:layout_height="48dp"
			            android:layout_marginBottom="0.2dp"
			            android:layout_weight="1"
			            android:background="#FFFFFF"
			            android:ems="10"
			            android:hint="请输入收件邮箱(必填)"
			            android:inputType="none"
			            android:gravity="right"
			            android:padding="10dp"
			            android:singleLine="true"
			            android:textColorHint="#b7b7b7"
			            android:textSize="14sp" >		
			        </mno.ruili_app.ct.CustomEditText>
			     </LinearLayout>  
			</LinearLayout>
            <!-- 图片上传 -->
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="7dp">
                <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_marginLeft="20dp"
	                android:layout_marginTop="10dp"
	                android:layout_marginBottom="10dp"
	                android:orientation="vertical">
	                <com.android.volley.toolbox.NetworkImageView
	                    android:id="@+id/iv_addImage1"
	                    android:layout_width="100dp"
	                    android:layout_height="50dp"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/add_image"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="#a7a7a7"
	                    android:textSize="12sp"
	                    android:text="上传公司营业执照"/>
	            </LinearLayout>
                <!--  <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="20dp"
	                android:layout_marginTop="10dp"
	                android:layout_marginBottom="10dp"
	                android:orientation="vertical">
	                <com.android.volley.toolbox.NetworkImageView 
	                    android:id="@+id/iv_addImage2"
	                    android:layout_width="100dp"
	                    android:layout_height="50dp"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/add_image"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="#a7a7a7"
	                    android:textSize="12sp"
	                    android:text="上传公司组织机构代码证(必填)"/>
            	</LinearLayout>-->
        	</RelativeLayout>
            <!--团队亮点  -->
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffffff"
		        android:layout_marginTop="7dp"
		        android:orientation="vertical">
		        <TextView 
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="10dp"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/orange"
		            android:text="团队亮点:(至少填写一个)"/>
		        <!-- 亮点 -->
		        <GridView
		            android:layout_marginTop="10dp"
		            android:id="@+id/gv_jobMsg"
		            android:layout_width="fill_parent"
		            android:numColumns="4" 
		            android:horizontalSpacing="5dp"
        			android:verticalSpacing="5dp" 
        			android:columnWidth="90dp"        			
        			android:stretchMode="columnWidth"
        			android:gravity="center"
		            android:layout_height="50dp">    
		        </GridView>
		    </LinearLayout>
		     <!--团队简介  -->
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffffff"
		        android:layout_marginTop="10dp"
		        android:orientation="vertical">
		        <TextView 
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="10dp"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/orange"
		            android:text="团队简介:"/>
		        <mno.ruili_app.ct.CustomEditText
		            android:id="@+id/cet_jobMsg"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="0.2dp"
		            android:background="#FFFFFF"
		            android:ems="10"
		            android:hint="请输入团队简介"
		            android:inputType="none"
		            android:padding="10dp"
		            android:textColorHint="#b7b7b7"
		            android:textSize="12sp" >		
		        </mno.ruili_app.ct.CustomEditText>
		    </LinearLayout>
		    <!--添加招聘职位  -->
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:orientation="vertical">
		        <mno.ruili_app.ct.CustomListview
			        android:id="@+id/mListView" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content">        
			    </mno.ruili_app.ct.CustomListview>
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="0.01dip"
				    android:layout_marginLeft="20dp"
				    android:layout_weight="0"
				    android:background="#7fdcdcdc" />
			    <TextView
			        android:id="@+id/tv_addJob" 
			        android:layout_width="match_parent"
			        android:layout_height="30dp"
			        android:textColor="@color/orange"
			        android:gravity="center"
			        android:background="#ffffff"
			        android:text="+添加招聘职位(至少填写一个)"/>
		    </LinearLayout>
		    <TextView
			    android:id="@+id/tv_ok"
			    style="@style/style_text_mybut"
			    android:layout_width="match_parent"
			    android:layout_height="30dp"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="20dp"
			    android:background="@drawable/radius_orange"
			    android:text="发布"
			    android:textColor="@color/white"
			    android:textSize="14sp" />
		 </LinearLayout>
     </ScrollView>     
</LinearLayout>
