<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
       
        android:orientation="horizontal" >

           <!--  <mno.ruili_app.ct.RoundImageView
                android:id="@+id/pl_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF" /> -->

                 <mno.ruili_app.ct.RoundimgView
                     android:id="@+id/pl_image"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:layout_marginLeft="15dp"
                     android:layout_marginTop="15dp"
                     android:background="#00FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/pl_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="张杰"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/nei_wd_cn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/view_line_fbedi"
                        android:drawableLeft="@drawable/nei_cn"
                        android:padding="6dp"
                        android:text="已采纳"
                        android:textColor="#ababab"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/pl_floor "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:drawablePadding="2dp"
                        android:textColor="#7a7a7a"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/pl_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:drawablePadding="2dp"
                        android:text=""
                        android:textColor="#555555"
                        android:textSize="12sp" />

                    
                 

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" >

  				    <mno.ruili_app.ct.nobut
  				        android:id="@+id/nei_lzcn"
  				        android:layout_width="55dp"
  				        android:layout_height="26dp"
  				        android:background="@drawable/selector_button_cn"
  				        android:focusable="false"
  				        android:text="采纳"
  				        android:textColor="#636363"
  				        android:textSize="14sp" />

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/pl_con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="沙发"
                    android:textColor="#424242"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="75dp"
        android:background="#dcdcdc"
        android:text="" />

</LinearLayout>
