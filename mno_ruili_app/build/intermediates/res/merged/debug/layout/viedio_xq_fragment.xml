<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f9"
    android:orientation="vertical" >

<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/xq_js"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/view_zk"
                android:maxLines="1"
                android:text="课程收益：深度解析点击率的。。"
                android:textColor="#595959"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/zb_bt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white_f5"
            android:visibility="visible" >

            <TextView
                android:id="@+id/zb_color"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:background="#f39801" />

            <TextView
                android:id="@+id/zb_bt_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="推介视频"
                android:textColor="#979797"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/zb_bt_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="2015年5月17日"
                android:textColor="#979797"
                android:visibility="gone" />
        </LinearLayout>
         <ListView
        android:id="@+id/mListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@null"
        android:listSelector="@drawable/selector_button_color_red_noshape"
        android:scrollbars="@null">
        
    </ListView>
        
    </LinearLayout>

</ScrollView>

</LinearLayout>
