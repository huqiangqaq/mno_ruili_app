<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_top" >
        <mno.ruili_app.ct.CloseButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/all_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="简历详情"
            android:textColor="@color/white"
            android:textSize="@dimen/default_font_title_size" />
    </RelativeLayout>
    <ScrollView 
	    android:id="@+id/sv_msg"
	    android:layout_marginTop="48dp"
	    android:layout_marginBottom="45dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#ffffff"
		        android:orientation="vertical">
		        <RelativeLayout 
		            android:layout_marginTop="10dp"
		            android:layout_marginLeft="5dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content">
		            <TextView 
		                android:id="@+id/tv_jobName"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=""/>
		        </RelativeLayout>
		        <!--  -->
		        <RelativeLayout 
		            android:layout_marginLeft="5dp"
		            android:layout_marginTop="10dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content">
		            <LinearLayout 
		                android:layout_alignParentLeft="true"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content">
			            <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:textColor="#a7a7a7"
			                android:text="经验"/>
			            <TextView 
			                android:id="@+id/tv_workTime"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginLeft="5dp"
			                android:text=""/>
			        </LinearLayout>
			        <LinearLayout 
			            android:layout_alignParentRight="true"
			            android:layout_marginRight="90dp"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content">
			            <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                 android:textColor="#a7a7a7"
			                android:text="学历"/>
			            <TextView 
			                android:id="@+id/tv_education"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginLeft="5dp"
			                android:text=""/>
			        </LinearLayout>
		        </RelativeLayout>
			    <!--  -->   
		        <RelativeLayout 
		            android:layout_marginLeft="5dp"
		            android:layout_marginTop="10dp"
		            android:layout_marginBottom="5dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content">
		            <LinearLayout 
		                android:layout_alignParentLeft="true"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content">
			            <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:textColor="#a7a7a7"
			                android:text="地点"/>
			            <TextView 
			                android:id="@+id/tv_workPlace"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginLeft="5dp"
			                android:text=""/>
			        </LinearLayout>
			        <LinearLayout 
			            android:layout_alignParentRight="true"
			            android:layout_marginRight="90dp"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content">
			            <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                 android:textColor="#a7a7a7"
			                android:text="薪资"/>
			            <TextView 
			                android:id="@+id/tv_salary"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginLeft="5dp"
			                android:text=""/>
			        </LinearLayout>
		        </RelativeLayout>
		    </LinearLayout>
		    <!-- 刘备 -->
		    <RelativeLayout
		          android:layout_width="match_parent"		          
		          android:background="#ffffff"
		          android:layout_marginTop="7dp"
		          android:layout_height="30dp">  
		         <RelativeLayout
		            android:id="@+id/my_login_imagebox"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"  
		            android:layout_marginTop="5dp"
		            android:layout_marginLeft="5dp"          
		            android:background="@drawable/imagebox"
		            android:orientation="vertical" > 
			        <mno.ruili_app.ct.RoundImageView
			            android:id="@+id/iv_workerImage"
			            android:layout_width="20dp"
			            android:layout_height="20dp" />
		        </RelativeLayout> 
		        <TextView
		                android:id="@+id/tv_nickName" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="13sp"
		                android:layout_marginLeft="40dp"
		                android:layout_marginTop="6dp"
		                android:text=""/>
		        <TextView 
		            android:id="@+id/shuxian"
		            android:layout_width="1dp"
		            android:layout_height="20dp"
		            android:layout_toRightOf="@+id/tv_nickName"
		            android:layout_marginLeft="10dp"
		            android:layout_marginTop="5dp"
		            android:background="#cccccc"/>
		        <TextView
		                android:id="@+id/tv_sex" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="13sp"            
		                android:layout_toRightOf="@+id/shuxian"
		                android:layout_marginLeft="10dp"
		                android:layout_marginTop="6dp"
		                android:text=""/>
		        <TextView
		                android:id="@+id/tv_phone" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="13sp"            
		                android:layout_toRightOf="@+id/tv_sex"
		                android:layout_marginLeft="20dp"
		                android:layout_marginTop="6dp"
		                android:text=""/>
		    </RelativeLayout>
		    <!--个人介绍  -->
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"		        
		        android:background="#ffffff"
		        android:layout_marginTop="7dp"
		        android:orientation="vertical">
		        <TextView 
		            android:layout_marginTop="10dp"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/orange"
		            android:layout_marginLeft="4dp"
		            android:text="个人介绍"/>
		        <!-- 亮点 -->
		        <mno.ruili_app.ct.TagFlowLayout
		            android:id="@+id/tfl_workerMsg"
		            android:layout_width="fill_parent"
		            android:layout_marginTop="5dp"
		            android:layout_height="wrap_content">    
		        </mno.ruili_app.ct.TagFlowLayout>
		    </LinearLayout>
            <!-- 工作经验-->
			<mno.ruili_app.ct.CustomListview
			    android:id="@+id/mListView1" 			    
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">			    
			</mno.ruili_app.ct.CustomListview>
			<!-- 教育经历-->
			<mno.ruili_app.ct.CustomListview
			    android:id="@+id/mListView2" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">			    
			</mno.ruili_app.ct.CustomListview>  
		 </LinearLayout>
	</ScrollView>
	<!-- 再看看/立刻沟通 -->
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:background="#ffffff"
	    android:layout_alignParentBottom="true">
	    <TextView
	        android:id="@+id/tv_lookAgain" 
	        android:layout_width="100dp"
	        android:layout_height="30dp"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="25dp"
	        android:layout_marginTop="5dp"
	        android:gravity="center"
	        android:background="@drawable/tv_bg2"
	        android:textColor="#ff6200"
	        android:textSize="13sp"
	        android:text="再看看"/>
	    <TextView 
	        android:id="@+id/tv_rightComm"
	        android:layout_width="100dp"
	        android:layout_height="30dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="25dp"
	        android:layout_marginTop="5dp"
	        android:gravity="center"
	        android:background="@drawable/radius_orange"
	        android:textColor="#ffffff"
	        android:textSize="13sp"
	        android:text="发邀请并沟通"/>
	</RelativeLayout>
</RelativeLayout>

