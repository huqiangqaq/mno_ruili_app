<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
   
    android:background="@color/blue_top" >

            <mno.ruili_app.ct.CloseButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/all_back" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="我的评论"
                android:textColor="@color/white"
                android:textSize="@dimen/default_font_title_size"
                 />

            <TextView
                android:id="@+id/my_but_bj"
                style="@style/style_text_mybut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:text="编辑"
                android:textColor="@color/white"
                android:textSize="@dimen/default_font_content_size" />

        </RelativeLayout>
    
<ListView
    android:id="@+id/mListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:divider="@null"
    android:listSelector="@drawable/selector_button_color_red_noshape"
     >

</ListView>

<LinearLayout
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:visibility="gone" >

    <TextView
        android:id="@+id/tv_all"
        style="@style/style_text_mybut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#f7f4f5"
        android:gravity="center"
        android:padding="10dp"
        android:text="全选"
        android:textColor="#424242"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_delete"
        style="@style/style_text_mybut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:background="#f7f4f5"
        android:gravity="center"
        android:padding="10dp"
        android:text="删除"
        android:textColor="#424242"
        android:textSize="15sp" />
</LinearLayout>

</LinearLayout>
