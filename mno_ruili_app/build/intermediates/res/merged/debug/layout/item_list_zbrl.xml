<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:context=".ct.CropImageActivity" >

    <LinearLayout
        android:id="@+id/zb_rq"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#eeeeee"
        android:clickable="true"
        android:visibility="visible" >

        <TextView
            android:id="@+id/zb_color"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:background="#32b16c"
            android:text="" />

        <TextView
            android:id="@+id/zb_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="2015年6月"
            android:textColor="#979797"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/zb_bt_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="2015年5月17日"
            android:textColor="#979797"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zb_item_yg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#f7f7f7"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/zb_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="29"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/zb_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="星期三"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="0.1dip"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="#d2d2d2" />

 		<mno.ruili_app.ct.mnolistview
             android:id="@+id/mListView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:divider="@null"
             android:listSelector="@drawable/selector_button_color_red_noshape" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/zb_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/zb_sc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0"
                                android:background="@drawable/zb_tx2"
                                android:clickable="true"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/zb_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#575757"
                            android:textSize="@dimen/default_font_content_size" />

                        <TextView
                            android:id="@+id/zb_zj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="10dp"
                            android:ellipsize="end"
                            android:gravity="top|left"
                            android:lines="2"
                            android:text=""
                            android:textColor="#575757"
                            android:textSize="@dimen/default_font_content_size" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:padding="10dp" >
                    </RelativeLayout>
                </LinearLayout>

               
            </LinearLayout>
            <!--
                   <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:layout_gravity="bottom"
                android:background="#d2d2d2"
                 />
            -->
        </LinearLayout>
    </LinearLayout>
<TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:layout_gravity="bottom"
                android:background="#d2d2d2" />
</LinearLayout>