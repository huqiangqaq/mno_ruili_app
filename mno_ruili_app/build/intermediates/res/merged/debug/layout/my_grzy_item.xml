<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res/mno.ruili_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/blue_top" >

            <mno.ruili_app.ct.CloseButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/all_back" />
 			
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="个人主页"
                android:textColor="@color/white"
                android:textSize="@dimen/default_font_title_size"
                 />

            <TextView
                android:id="@+id/my_but_registered"
                style="@style/style_text_mybut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/default_font_content_size" />

        </RelativeLayout>



    <mno.ruili_app.ct.ObservableScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

          

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tit_bj"
                android:gravity="top" >

                <LinearLayout
                    android:id="@+id/my_xx"
                    style="@style/style_text_canbut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_login_imagebox"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/my_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="14sp" />

                          <ImageView
                              android:id="@+id/my_sex"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:src="@drawable/my_sex_man" />

                           <ImageView
                               android:id="@+id/my_vip"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:src="@drawable/novip"
                                />

                    </LinearLayout>

					<TextView
					    android:id="@+id/my_dz"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="center"
					    android:layout_marginBottom="2dp"
					    android:layout_marginTop="5dp"
					    android:text=""
					    android:textColor="#fff"
					    android:textSize="12sp" />

                    <TextView
                        android:id="@+id/my_xq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/my_but_login"
                    style="@style/style_text_canbut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/my_login_imagebox"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/butyuan"
                    android:padding="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="登录/注册"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_font_content_size"
                    android:visibility="gone" />

              <!--   <mno.ruili_app.ct.RoundImageView
                    android:id="@+id/my_login_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="#00FFFFFF" 
                    pv:border_thickness="3dp"
        			
        			pv:border_outside_color="#feffff"/>
 -->

                <RelativeLayout
                    android:id="@+id/my_login_imagebox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/my_up"
                    android:orientation="vertical" >
                    
            <mno.ruili_app.ct.RoundImageView
                android:id="@+id/my_login_image"
                style="@style/style_text_mybut"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#00FFFFFF"
                pv:border_outside_color="#feffff"
                pv:border_thickness="3dp" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/select_sj"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:onClick="onclick"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/select_sj_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.0"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="他的问答"
                        android:textColor="@color/blue"
                        android:textSize="15sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/select_sj_bz"
                        android:layout_width="match_parent"
                        android:layout_height="2dip"
                        android:layout_weight="0"
                        android:visibility="invisible" 
                        android:background="@color/blue_top" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_tg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:onClick="onclick"
                    android:visibility="invisible" 
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/select_tg_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.0"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="他的回帖"
                        android:textColor="@color/gray_91"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/select_tg_bz"
                        android:layout_width="match_parent"
                        android:layout_height="2dip"
                        android:layout_weight="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_yy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:onClick="onclick"
                    android:visibility="invisible" 
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/select_yy_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.0"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="他的视频"
                        android:textColor="@color/gray_91"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/select_yy_bz"
                        android:layout_width="match_parent"
                        android:layout_height="2dip"
                        android:layout_weight="0" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                      <ImageView
               
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:background="@drawable/zy_x"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viedio_wd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="800dp"
                    android:orientation="vertical" >

                    <mno.ruili_app.ct.mnolistview
                        android:id="@+id/mListView_wd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:listSelector="@drawable/selector_button_color_red_noshape"
                        android:scrollbars="@null" >
                    </mno.ruili_app.ct.mnolistview>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viedio_ht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="800dp"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <mno.ruili_app.ct.mnolistview
                        android:id="@+id/mListView_ht"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:listSelector="@drawable/selector_button_color_red_noshape"
                        android:scrollbars="@null" >
                    </mno.ruili_app.ct.mnolistview>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viedio_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="800dp"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <mno.ruili_app.ct.mnolistview
                        android:id="@+id/mListView_sp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:listSelector="@drawable/selector_button_color_red_noshape"
                        android:scrollbars="@null" >
                    </mno.ruili_app.ct.mnolistview>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy2"
            style="@style/Item.Sticky"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:focusable="true"
            android:orientation="horizontal"
            android:visibility="visible" >

              <LinearLayout
                  android:id="@+id/select_sj"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1.0"
                  android:onClick="onclick"
                  android:orientation="vertical" >

                  <TextView
                      android:id="@+id/select_sj_text2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_weight="1.0"
                      android:drawablePadding="5dp"
                      android:gravity="center"
                      android:text=""
                      android:textColor="@color/orange"
                      android:textSize="15sp" />

                  <TextView
                      android:id="@+id/select_sj_bz2"
                      android:layout_width="match_parent"
                      android:layout_height="2dip"
                      android:layout_weight="0"
                      android:background="@color/orange" />
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/select_tg"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1.0"
                  android:onClick="onclick"
                  android:orientation="vertical" >

                  <TextView
                      android:id="@+id/select_tg_text2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_weight="1.0"
                      android:drawablePadding="5dp"
                      android:gravity="center"
                      android:text=""
                      android:textColor="@color/gray_91"
                      android:textSize="15sp" />

                  <TextView
                      android:id="@+id/select_tg_bz2"
                      android:layout_width="match_parent"
                      android:layout_height="2dip"
                      android:layout_weight="0" />
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/select_yy"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1.0"
                  android:onClick="onclick"
                  android:orientation="vertical" >

                  <TextView
                      android:id="@+id/select_yy_text2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_weight="1.0"
                      android:drawablePadding="5dp"
                      android:gravity="center"
                      android:text=""
                      android:textColor="@color/gray_91"
                      android:textSize="15sp" />

                  <TextView
                      android:id="@+id/select_yy_bz2"
                      android:layout_width="match_parent"
                      android:layout_height="2dip"
                      android:layout_weight="0" />
              </LinearLayout>
          </LinearLayout>
        </FrameLayout>
    </mno.ruili_app.ct.ObservableScrollView>


</LinearLayout>
